@model IEnumerable<Realestate_portal.Models.crTb_OrderDetails>
@{
    ViewBag.Title = "Step_onoe";
    Layout = "~/Views/Shared/_Layout_store.cshtml";
}

<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Shopping Cart</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="@Url.Action("Shop","CustomResources")">Back</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Shopping Cart</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- cart-main-area start -->
<div class="cart-main-area section-padding--lg bg--white">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 ol-lg-12">
                <form action="#">
                    <div class="table-content wnro__table table-responsive">
                        <table>
                            <thead>
                                <tr class="title-top">
                                    <th class="product-thumbnail">Image</th>
                                    <th class="product-name">Product</th>
                                    <th class="product-price">Price</th>
                                    <th class="product-quantity">Quantity</th>
                                    <th class="product-subtotal">Total</th>
                                    <th class="product-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                              @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td class="product-thumbnail"><a href="#"><img src="~/Content/assetsStore/images/product/sm-3/2.jpg" alt="product img"></a></td>
                                    <td class="product-name"><a href="#">@item.Resource (@item.Style)</a></td>
                                    <td class="product-price"><span class="amount">@item.Price</span></td>
                                    <td class="product-quantity"><input type="number" name="Quantity" value="@item.Quantity"></td>
                                    <td class="product-subtotal">@item.Price</td>
                                    <td class="product-remove"><a href="@Url.Action("deleteDetail","CustomResources",new { id = item.ID_detail})">X</a></td>

                                </tr>
                                    }
                                }

                                <tr>
                   
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="cartbox__btn">
                    <ul class="cart__btn__list d-flex flex-wrap flex-md-nowrap flex-lg-nowrap justify-content-between">
                        <li><a href="#">Update Cart</a></li>
                        <li><a href="@Url.Action("actualizarEstado","CustomREsources", new { id = ViewBag.ID_order})">Check Out</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-6">
                <div class="cartbox__total__area">
                    <div class="cartbox-total d-flex justify-content-between">
                        <ul class="cart__total__list">
                            <li>Cart total</li>
                            <li>Sub Total</li>
                        </ul>
                        <ul class="cart__total__tk">
                            <li>$@Model.Select(c=>c.Price).Sum()</li>
                            <li>$@Model.Select(c => c.Price).Sum()</li>
                        </ul>
                    </div>
                    <div class="cart__total__amount">
                        <span>Grand Total</span>
                        <span>$@Model.Select(c => c.Price).Sum()</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
