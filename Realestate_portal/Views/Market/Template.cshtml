@using Realestate_portal.Models.ViewModels.Market
@model List<Template_Layout>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_CRM_Marketing.cshtml";
}

<style>
    .brand-2 {
        width: 200px;
        height: 225px;
        position: relative;
        background-color: white;
        color: black;
        font-weight: bold;
        text-align: center;
        border-width: 3px;
        border-style: solid;
        border-color: darkgray;
        padding: 0;
        margin-right: 20px;
        box-shadow: rgba(0,0,0,0.2) 5px 5px 7px;
    }

    .item-brands {
        position: relative;      
        margin-bottom:10px;
    }

    .message {
        position: absolute;
        bottom:0;
        left:0;
        width: 100%;
        height: 20%;
        background-color: rgba(112,137,232,1);
        opacity: 0;
        transition: opacity 0.25s;
    }

    .item-brands:hover .message {
        opacity: 1;
    }

    .brand-2:hover {
        border-color: rgba(112,137,232,1);
    }

    .m-label {
        position: relative;
        margin-top: 10px;
        color: white;
    }

    .brand-2 img {
        height: 138px;
        width: 95%;
    }

    .flex-container{
        display:flex;
        flex-flow:row wrap;      
        width:100%;
        justify-content:center;
        justify-items:center;
        padding:10px;
        align-content:space-around;
    }

</style>
<br />
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb" class="float-left">
            <ol class="breadcrumb">
              
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Market")">Market</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("brands","Market")">Brands</a></li>               
                @if (ViewBag.company !=7)
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("Categories","Market")">Companies</a></li>
                }
                <li class="breadcrumb-item"><a href="@Url.Action("Shop","Market",new {id=ViewBag.company})">Template Types</a></li>
                <li class="breadcrumb-item active" aria-current="page">Template</li>
            </ol>
        </nav>
        @Html.Partial("Utilities/ShoppingCart")
    </div>
</div>
<div class="row">
    <div class="col-md-12  text-center">
        <div style="text-align:center">
            <h2 style="font-weight: bold; color: black ">Available Templates</h2>
        </div> 
    </div>
</div>
<br />
<div class="row">
    <div class="col-12 float-left">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" style="font-weight: bold; color: darkgreen"><i class="fas fa-circle"></i> Select a template</li>
                <li class="breadcrumb-item" aria-current="page"><i class="fas fa-arrow-right"></i> Select size and materials</li>
                <li class="breadcrumb-item" aria-current="page"><i class="fas fa-arrow-right"></i> Customize it</li>
            </ol>
        </nav>
    </div>
</div>
<br />
        <div class="flex-container  text-center">
            <div class="item-brands">
                <a href="@Url.Action("SizesAndMaterials","Market")">
                    <div class="brand-2">
                        <br />
                        <div>
                            <p>Upload your own</p>
                        </div>
                        <br />
                        <div>
                            Select your own artwork
                        </div>
                        <div class="message">
                            <p class="m-label">Click to see details</p>
                        </div>
                    </div>
                </a>
            </div>     
        @if (Model.Count >0)
        {
            var inc = 1;
            foreach (var item in Model)
            {               
                    <div class="item-brands">
                        <a href="@Url.Action("SizesAndMaterials", "Market", new { id = item.Name })">
                            <div class="brand-2">
                                <br />
                                <div>
                                    <p>Item @inc</p>
                                </div>
                                <div>
                                    <img src="~/@item.Path"  alt="@item.Name"  />
                                </div>
                                <div class="message">
                                    <p class="m-label">Click to see details</p>
                                </div>
                            </div>
                        </a>
                    </div>             
                inc++;
            }
        }
        else
        {          
                <div class="item-brands">
                    <a href="#">
                        <div class="brand-2">
                            <br />
                            <div>
                                <p>No templates Availables yet</p>
                            </div>
                            <br />
                            <div>
                                For this category
                            </div>
                            <div class="message">
                                <p class="m-label">Click to see details</p>
                            </div>
                        </div>
                    </a>
                </div>         
        }
    </div>
