@using Realestate_portal.Models.ViewModels.Market
@model List<Template_Layout>
@{
    ViewBag.Title = "Categories";

}

<style>
    .brand-2 {
        width: 200px;
        height: 225px;
        position: relative;
        background-color: white;
        color: black;
        font-weight: bold;
        text-align: center;
        border-width: 3px;
        border-style: solid;
        border-color: darkgray;
        padding: 0;
        margin-right: 20px;
        box-shadow: rgba(0,0,0,0.2) 5px 5px 7px;
    }

    .item-brands {
        position: relative;
        margin-bottom: 10px;
    }

    .message {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 20%;
        background-color: rgba(112,137,232,1);
        opacity: 0;
        transition: opacity 0.25s;
    }

    .item-brands:hover .message {
        opacity: 1;
    }

    .brand-2:hover {
        border-color: rgba(112,137,232,1);
    }

    .m-label {
        position: relative;
        margin-top: 10px;
        color: white;
    }

    .brand-2 img {
        height: 138px;
        width: 95%;
    }

    .flex-container {
        display: flex;
        flex-flow: row wrap;
        width: 100%;
        justify-content: center;
        justify-items: center;
        padding: 10px;
        align-content: space-around;
    }
</style>


<div class="top-bar -mx-4 px-4 md:mx-0 md:px-0">
    <!-- BEGIN: Breadcrumb -->
    <div class="-intro-x breadcrumb mr-auto hidden sm:flex">
        <a href="@Url.Action("Index","Market")">Market</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>

        @if (ViewBag.pgr)
        {

            <a href="@Url.Action("Companies","Market", new {id=ViewBag.company, subcategory=true })">PREMIUM GROUP REALTY</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>

        }
        else
        {
            <a href="@Url.Action("Brands","Market")">Brands</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
        }

        <a href="@Url.Action("Shop","Market",new {id=ViewBag.company})">Brands Types</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i>
        <a href="#" class="breadcrumb--active">Template </a>
    </div>
    <!-- END: Breadcrumb -->

</div><br />
<br />

<div class="grid grid-cols-12">
    <div class="col-span-12 2xl:col-span-12">
        <div class="container mt-1">
            <div class="row">
                <div class="col-md-12  text-center">
                    <h1 style="font-weight: bold; color: black ">Available Templates</h1>
                    <br />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-12 float-left">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item" style="font-weight: bold; color: darkgreen"><i data-feather="check-circle"></i> Select a template</li>
                            <li class="breadcrumb-item" aria-current="page"><i data-feather="arrow-right"></i> Select size and materials</li>
                            <li class="breadcrumb-item" aria-current="page"><i data-feather="arrow-right"></i> Customize it</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="flex-container  text-center">

                        @if (Model.Count > 0)
                {
                    var inc = 1;
                    foreach (var item in Model)
                    {
                        <div class="item-brands">
                            <a href="@Url.Action("SizesAndMaterials", "Market", new { id = item.Name })">
                                <div class="brand-2">
                                    <br />
                                    <div>
                                        <p>Item @inc</p>
                                    </div>
                                    <div>
                                        <img src="~/@item.Path" alt="@item.Name" />
                                    </div>
                                    <div class="message">
                                        <p class="m-label">Click to see details</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                inc++;
            }
        }
        else
        {
            <div class="item-brands">
                <a href="#">
                    <div class="brand-2">
                        <br />
                        <div>
                            <p>No templates Availables yet</p>
                        </div>
                        <br />
                        <div>
                            For this category
                        </div>
                        <div class="message">
                            <p class="m-label">Click to see details</p>
                        </div>
                    </div>
                </a>
            </div>
}

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

