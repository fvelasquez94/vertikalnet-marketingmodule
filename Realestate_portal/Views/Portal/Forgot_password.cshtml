@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<!-- Begin Container -->
<div class="container-fluid h-100 overflow-y">
    <div class="row flex-row h-100">
        <div class="col-12 my-auto">
            <div class="password-form mx-auto">
                <div class="logo-centered">
                    <a href="#">
                        <img src="~/Content/pgrlogos/S7VENLogoBlack.png" alt="logo">
                    </a>
                </div>
                <h3>Password Recovery</h3>
                            @if (ViewBag.msg != "")
                            {
                                <h3 class="mr-auto">@ViewBag.msg</h3>
                            }
                            else {
                            using (Html.BeginForm("Reset_pass", "Portal", FormMethod.Post, new { id = "myform" }))
                            {

       
                                <p class="mb-5 mr-auto">Enter your email below.</p>
                                <div class="form-group">
                               
                                        <input type="text" class="form-control" placeholder="Email" name="email" id="email" required autofocus>
                             
                                </div>
                                  <div class="input-group clearfix">
                                      <p class="text-danger text-small">@ViewData["msgnotexist"]</p>
                                    </div>
                                
                                @*<div class="form-check form-check-flat mt-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input" name="ahahahahstayinalive" id="ahahahahstayinalive">
                                            Keep me logged in
                                        </label>
                                    </div>*@
                                <div class="form-group">
                                    <button class="btn btn-dark submit-btn">SEND</button>
                                </div>

                            }
                            }
                <div class="back">
                    <a href="@Url.Action("Login","Portal")">Back</a>
                </div>
            </div>
        </div>
        <!-- End Col -->
    </div>
    <!-- End Row -->
</div>

<small>@ViewBag.errorconsole</small>