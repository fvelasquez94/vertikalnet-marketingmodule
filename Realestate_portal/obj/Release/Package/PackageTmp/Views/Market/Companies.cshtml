@using Realestate_portal.Models

@model List<Template_categories>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_CRM_Marketing.cshtml";
}

<style>

    .brand-2 {
        width: 200px;
        height: 225px;
        position: relative;
        background-color: white;
        color: black;
        font-weight: bold;
        text-align: center;
        border-width: 3px;
        border-style: solid;
        border-color: darkgray;
        padding: 0;
        margin-right:20px;
        box-shadow: rgba(0,0,0,0.2) 5px 5px 7px;
    }

    .item-brands {
        position: relative;
        margin-bottom:20px;
       
    }

    .message {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 20%;
        background-color: rgba(112,137,232,1);
        opacity: 0;
        transition: opacity 0.25s;
    }

    .item-brands:hover .message {
        opacity: 1;
    }

    .brand-2:hover {
        border-color: rgba(112,137,232,1);
    }

    .m-label {
        position: relative;
        margin-top: 10px;
        color: white;
    }

    .brand-2 img {
        height: 100px;
        width: 194px;
    }

    .flex-container {
        display: flex;
        flex-flow: row wrap;
        width: 100%;
        justify-content: center;
        justify-items: center;
        padding: 10px;
        align-content: space-around;
    }

</style>
<br />
<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb" class="float-left">
            <ol class="breadcrumb">
            
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Market")">Market</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("brands","Market")">Brands</a></li>
                <li class="breadcrumb-item active" aria-current="page">Available Companies</li>
            </ol>
        </nav>
        @Html.Partial("Utilities/ShoppingCart")
    </div>
</div>
    <div class="row">
        <div class="col-md-12  text-center">
            <h1 style="font-weight: bold; color: black ">Available Companies</h1>           
        </div>
    </div>
    <div class="flex-container">             
            @foreach (var item in Model)
            {
                <div class="item-brands">
                    <a href="@Url.Action("Shop","Market",new {id=item.id})">
                        <div class="brand-2">
                            <br />
                            <div>
                                <p>@item.category</p>
                            </div>
                            <br />
                            <div>
                                <img src="~/@item.path" alt="@item.category" />
                            </div>
                            <div class="message">
                                <p class="m-label">Click to see details</p>
                            </div>
                        </div>
                    </a>
                </div>
            }            
    </div>

