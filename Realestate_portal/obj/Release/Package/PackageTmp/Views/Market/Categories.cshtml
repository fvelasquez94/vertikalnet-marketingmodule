<style>
    .brand-1 {
        width: 400px;
        height: 150px;
        background-color: black;
        color: white;
        font-weight: bold;
        display: flex;
        align-items: center;
        font-size: 25px;
        border-width: 5px;
        border-style: solid;
        border-color: antiquewhite;
        padding: 0;
    }


    .brand-2 {
        width: 150px;
        height: 200px;
        background-color: white;
        color: black;
        font-weight: bold;
        text-align: center;
        border-width: 3px;
        border-style: solid;
        border-color: darkgray;
        padding: 0;
        box-shadow: rgba(0,0,0,0.2) 5px 5px 7px;
    }

    .item-brands {
        position: relative;
    }

    .message {
        position: absolute;
        bottom: 2px;
        left: 8px;
        width: 90%;
        height: 20%;
        background-color: rgba(112,137,232,1);
        opacity: 0;
        transition: opacity 0.25s;
    }

    .item-brands:hover .message {
        opacity: 1;
    }

    .brand-2:hover {
        border-color: rgba(112,137,232,1);
    }

    .m-label {
        position: relative;
        margin-top: 10px;
        color: white;
    }



</style>
